<%- include('../partials/header') %>

<div class="wishlist-main">
    <div class="container">
        <h3 class="wish-head">Wishlist <i class="ri-heart-line"></i></h3>
        <div class="row">
            <% products.forEach(item=>{ %>
                <div  class="col-12 col-md-6">
                    <div class="wish-item">
                        <a href="/product/<%=item._id %>"class="wish-img">
                            <img src="/product-images/<%=item.mainImage.filename  %>" alt="">
                        </a>
                        <div class="wish-detail">
                            <b><%=item.name  %> </b>
                            <h5>â‚¹<%= item.price  %> </h4>
                        </div>
                        <div class="wish-cancel">
                                <i class="ri-close-line"
                                onclick="
                                if(confirm('Are you Sure Remove this item from wishlist ?')) 
                                    window.location.href='/remove-from-wishlist/<%=item._id %>'"
                                ></i>
                        </div>
                    </div>
                   
                </div>
            <% }) %> 
        </div>
    </div>
</div>