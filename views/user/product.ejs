<%- include('../partials/header') %>
<div class="product-main">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="car-container">
          <div id="carouselExampleIndicators" class="carousel slide w-100">
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="0"
                class="active"
                aria-current="true"
                aria-label="Slide 1"
              ></button>
              <% product.sideImages.forEach((item, index)=>{ %>
                <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="<%= index+1 %>"
                aria-label="Slide <%= index+2 %>"
                ></button>
              <% }) %> 
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  src="http://localhost:4001/product-images/<%= product.mainImage.filename %>"
                  class="d-block w-100"
                  alt="..."
                />
               
              </div>
              <% product.sideImages.forEach(item=>{ %>
                <div class="carousel-item">
                <img
                src="http://localhost:4001/product-images/<%= item.filename %>"
                class="d-block w-100"
                alt="..."
              />
            </div>
              <% })  %> 
            </div>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon car-btn"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon car-btn"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="btns">
          <button class="btn-gt-cart" 
          onclick="window.location.href='/cart'"
          >Go to Cart</button>
          <button class="btn-ad-cart"
          onclick="window.location.href='/add-to-cart/<%=product._id %>'"
          >Add To Cart</button>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="product-container">
          <div class="product-head mt-5">
            <h3 ><%= product.name  %> </h3>
