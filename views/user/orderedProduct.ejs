<%- include('../partials/header') %>
<div class="product-main">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="car-container">
          <div id="carouselExampleIndicators" class="carousel slide w-100">
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="0"
                class="active"
                aria-current="true"
                aria-label="Slide 1"
              ></button>

              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="1"
              ></button>
              aria-label="Slide 2"
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="2"
                aria-label="Slide 3"
              ></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  src="/images/realme9.webp"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item">
                <img
                  src="/images/redmi12.webp"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item">
                <img src="/images/tv.jpg" class="d-block w-100" alt="..." />
              </div>
            </div>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon car-btn"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon car-btn"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="btns">
          <button class="btn-ad-cart w-75" disabled>Cancel</button>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="product-container">
          <div class="product-head mt-5">
            <h3>Apple Iphone 14 pro Max</h3>
          </div>
          <div class="product-price mt-3">
            <h3 class="me-2">₹ 189,999</h3>
            <strike>₹ 179,999</strike>
          </div>
          <h4 class="mt-4">Address</h4>
          <pre class="mt-3">
Something House 
tiru, near Railway station
pin: 676101
state kerala
        </pre
          >

          <h4 class="mt-4">Status</h4>
          <div class="status-box mt-3">
            <div class="order-status">
                <div class="delivered">delivered</div>
            </div>
          </div>
          <h4 class="mt-4">Quantity</h4>
          <div class="quantity-box mt-3">
            <span>Quantity: </span>
            <input type="number" value="1" id="quantity" disabled />
          </div>

          <h4 class="mt-5">Add Ratings</h4>
          <form class="ratings d-flex flex-column align-items-start">
            <div class="rate">
              <input type="radio" id="star5" name="rate" value="5" />
              <label for="star5" title="text">5 stars</label>
              <input type="radio" id="star4" name="rate" value="4" />
              <label for="star4" title="text">4 stars</label>
              <input type="radio" id="star3" name="rate" value="3" />
              <label for="star3" title="text">3 stars</label>
              <input type="radio" id="star2" name="rate" value="2" />
              <label for="star2" title="text">2 stars</label>
              <input type="radio" id="star1" name="rate" value="1" />
              <label for="star1" title="text">1 star</label>
            </div>
            <button>Save</button>
          </form>
          <h4 class="mt-5">Add Ratings</h4>
          <div class="add-review">
            <textarea name="" id="" rows="4" placeholder="add review..."></textarea>
            <button class="mt-3">Save</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
