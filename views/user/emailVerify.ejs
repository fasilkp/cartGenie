
    <div class="main">
        <header class="container login-header">
          <h3>E-cart</h3>
        </header>
        <div class="container login-container" style="padding-top: 50px;">
          <div class="login-box">
            <form action="/verifyEmail" method="post">
              <h2>Verify OTP</h2>
              <p class="text-center">Enter the OTP sent to <% if(user){ %><b><%= user.email  %></b><% } %></p>
              <input type="text" name="email" style="height: 0px; visibility: hidden; margin-top: -100px;" value="<%= user?.email %>"/>
              <input type="text" name="name" style="height: 0px; visibility: hidden;" value="<%= user?.name %>" />
              <input type="text" name="password" style="height: 0px; visibility: hidden;" value="<%= user?.password  %>" />
              <div class="form-row">
                <input type="text" placeholder="OTP" name="otp" />
                <% if(error){ %> 
                  <b class="text-danger"><%= message  %> </b>
                <% } %> 
              </div>
              <div class="form-row">
                <button>Verify</button>
              </div>
              <div class="d-flex justify-content-center text-center" style="font-weight: 500; cursor: pointer;" id="countdown">
               
              </div>
            </form>
          </div>
          <div class="login-image-container">
            <img src="/images/otp.jpg" alt="" />
          </div>
        </div>
      </div>

      <script>
        let countdown=document.getElementById("countdown");
        let count=61;
        const coundownInterval = setInterval(() => {
          count--;
          countdown.innerText=" Resend OTP in "+count;
          checkOver()
        }, 1000);
        function checkOver(){
          if(count==0){
            clearInterval(coundownInterval)
            countdown.innerHTML=`
            <span onclick="window.location.reload()">Resend OTP</span>
            `
          }
        }
      </script>
  
  