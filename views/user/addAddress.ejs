<%- include('../partials/header') %>
<div class="add-address-main">
    <div class="container">
        
        <h3 >Add Address</h3>
        <div class="add-address-container">
            <form class="add-box mt-3">
            <h4 class="mt-3">Manage Address</h4>
            <div class="add-row mt-1">
                <div class="add-row-col">
                    <label for="">Name</label>
                    <input type="text" placeholder="Name">
                </div>
                <div class="add-row-col">
                    <label for="">Mobile</label>
                    <input type="number" placeholder="mobile">
                </div>
            </div>
            <div class="add-row">
                <div class="add-row-col">
                    <label for="">PIN Code</label>
                    <input type="number" placeholder="PIN code">
                </div>
                <div class="add-row-col">
                    <label for="">Locality</label>
                    <input type="text" placeholder="locality">
                </div>
            </div>
            
            <div class="add-row text-area">
                <div class="add-row-col">
                    <label for="">Address</label>
                    <textarea name=""placeholder="Address" rows="5"></textarea>
                </div>
            </div>

            <div class="add-row">
                <div class="add-row-col">
                    <label for="">City/Village/Town</label>
                    <input type="text" placeholder="city/village/town">
                </div>
                <div class="add-row-col">
                    <label for="">State</label>
                    <input type="text" placeholder="state">
                </div>
            </div>
            <div class="add-row">
                <button>Add Address</button>
            </div>
        </form>
        </div>
    </div>
</div>