<%- include('../partials/adminHeader') %>
<div class="add-product-main">
    <h3>Add Coupon</h3>
    <form action="/admin/add-coupon" method="post" class="add-product-container mt-3">
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Name">Name</label>
                <input type="text" name="name" placeholder="name" required/>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Name">Coupon Code </label>
                <input type="text" name="code" placeholder="code" required/>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Name">Minimum amount of purchase </label>
                <input type="text" name="minAmount" placeholder="minimum amount" required/>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Name">Discount (in percentage)</label>
                <input type="text" name="discount" placeholder="discount (in percentage)"  pattern="[0-9]*" maxlength="2" required/>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Name">Max Disount Amount</label>
                <input type="number" name="maxDiscountAmount" placeholder="max discount " required/>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Name">Expiry </label>
                <input type="date" name="expiry" placeholder="expiry" required/>
            </div>
        </div>
        <div class="a-p-form-row">
            <button type="submit">Add Coupon</button>
        </div>
    </form>
</div>