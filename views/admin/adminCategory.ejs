<%- include('../partials/adminHeader') %>
<div class="orders-main">
  <div class="side-menu">
    <a href="/admin/">
      <li><i class="ri-dashboard-fill"></i>DashBoard</li>
    </a>
    <a href="/admin/orders">
      <li ><i class="ri-shopping-bag-fill"></i> Orders</li>
    </a>
    <a href="/admin/product">
      <li><i class="ri-smartphone-fill"></i> Products</li>
    </a>
    <a href="/admin/users">
      <li><i class="ri-user-fill"></i> Users</li>
    </a>
    <a href="/admin/category">
      <li  class="selected"><i class="ri-layout-grid-fill"></i> Category</li>
    </a>
    <a href="/admin/offers">
      <li><i class="ri-percent-fill"></i> Offers</li>
    </a>
    <a href="/admin/banned-users">
      <li><i class="ri-indeterminate-circle-fill"></i> Banned Users</li>
    </a>
    <a href="/admin/coupons">
      <li><i class="ri-ticket-fill"></i> Coupons</li>
    </a>
  </div>
  <div class="order-container">
    <div class="mt-2 p-3 d-flex align-items-center">
        <h3>Category</h3>
        <!-- <div class="product-search">
            <input type="text" placeholder="search for users">
            <i class="ri-search-line"></i>
        </div> -->
        <a href="/admin/add-category">
          <button class="btn btn-dark" style="height: 50px; margin-left:30px;">Add Category</button>
        </a>
    </div>
    <div class="row mt-2 p-3">
        <div class="orders-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Category Name</th>
                      <th scope="col">Status</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% categories.forEach((item, index)=>{%>
                      <tr>
                        <th scope="row"><%= index+1  %> </th>
                        <th><%= item.category %> </th>
                        <td>
                          <% if(item.unlist){ %>Unlist
                            <%} else { %>List <% } %>  
                        </td>
                        <td><div class="dropdown">
                          <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                              <i class="ri-more-2-fill"></i>
                          </button>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/admin/edit-category/<%=item._id%>">Edit</a></li>
                            <% if(item.unlist){ %> <li><a class="dropdown-item" onclick="confirmList('<%=item._id%>')">List</a></li>
                            <% } else{ %> <li><a class="dropdown-item" onclick="confirmUnList('<%=item._id%>')">Unlist</a></li> <% } %> 
                          </ul>
                        </div></td>
                      </tr>
                    <% }) %> 
                   
                  </tbody>
              </table>
        </div>
    </div>
  </div>
</div>

<script>
  function confirmList(id){
    if(confirm("Are You Sure List this category")){
        window.location.href=`/admin/list-category/${id}`
    }
  }
  function confirmUnList(id){
    if(confirm("Are You Sure Unlist this category")){
        window.location.href=`/admin/unlist-category/${id}`
    }
  }
</script>